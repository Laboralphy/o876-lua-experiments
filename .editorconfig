# EditorConfig is awesome: https://EditorConfig.org

# Basic configuration for all files
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Specificities for certain type of files
[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{js,jsx,ts,tsx,json,yml,yaml,html,css,scss,less,md}]
indent_style = space
indent_size = 4
